{% extends "base.twig" %}

{% block title %}Projects Index{% endblock %}

{% block main %}
    <section class="row">
        <h2 class="text-center">Projects Index</h2>
        <table>
            <thead class="text-center">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-antiquewhite">
                {% if projects is empty %}
                    <tr>
                        <td colspan="3" class="text-center">No projects found.</td>
                    </tr>
                {% endif %}           
                {% for project in projects %}
                    <tr>
                        <td>{{ project.project_id }}</td>
                        <td>{{ project.project_name }}</td>
                        <td>
                            {% if project.active %}
                                <span class="text-success">&#10003;</span> {# ✔ #}
                            {% else %}
                                <span class="text-danger">&#10007;</span> {# ✖ #}
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-outline-success" href="/projects/project/edit/{{ project.project_id }}">Edit</a>
                            {{ include('admin/projects/_delete_form.twig') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="mt-3">
            <a href="/projects/project/new" class="btn btn-primary">Create New Project</a>
        </div>
        <!-- Pagination -->
        {% if totalPages > 1 %}
            <nav id="pagination" aria-label="Page navigation">
                <ul class="pagination">
                    {% if currentPage > 1 %}                        
                        <li class="page-item">
                            <a class="page-link" href="/projects/project/index/{{ currentPage - 1 }}">Previous</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/projects/project/index/{{ 1 }}"><<</a>
                        </li>
                    {% endif %}

                    {# Dynamic Page Number Links #}                    
                    {% set startPage = currentPage - (maxPagesToShow / 2)|round(0, 'floor') %}
                    {% set endPage = currentPage + (maxPagesToShow / 2)|round(0, 'floor') %}

                    {# Adjust start and end pages for the beginning of the range #}
                    {% if startPage < 1 %}
                        {% set startPage = 1 %}
                        {% set endPage = maxPagesToShow %}
                    {% endif %}

                    {# Adjust start and end pages for the end of the range #}
                    {% if endPage > totalPages %}
                        {% set endPage = totalPages %}
                        {% set startPage = totalPages - maxPagesToShow + 1 %}
                        {% if startPage < 1 %} {# In case totalPages is less than maxPagesToShow #}
                            {% set startPage = 1 %}
                        {% endif %}
                    {% endif %}

                    {# Display '...' at the beginning if needed #}
                    {% if startPage > 1 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}

                    {# Loop through the calculated page range #}
                    {% for i in startPage..endPage %}
                        <li class="page-item {% if i == currentPage %}active{% endif %}">
                            <a class="page-link" href="/projects/project/index/{{ i }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    {# Display '...' at the end if needed #}
                    {% if endPage < totalPages %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="/projects/project/index/{{ totalPages }}">>></a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/projects/project/index/{{ currentPage + 1 }}">Next</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %} 
    </section>
{% endblock %}