{% extends "base.twig" %}

{% block main %}    
    <section class="row"> 
        <h2 class="text-center">Tasks Index</h2>
        <table>
            <thead class="text-center">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Priority</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-antiquewhite">
                {% if tasks is empty %}
                    <tr>
                        <td colspan="8" class="text-center">No tasks found.</td>
                    </tr>
                {% endif %}
                {% for task in tasks %}
                    <tr>
                        <td>{{ task.task_id }}</td>
                        <td class="text-start">{{ task.task_name }}</td>
                        <td>{{ task.description }}</td>
                        <td>{{ task.priority }}</td>
                        <td>{{ task.created_at }}</td>
                        <td>{{ task.updated_at }}</td>
                        <td>
                            {% if task.active %}
                                <span class="text-success">&#10003;</span> {# ✔ #}
                            {% else %}
                                <span class="text-danger">&#10007;</span> {# ✖ #}
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-outline-success" href="/tasks/task/edit/{{ task.task_id }}">Edit</a>
                            {{ include('admin/tasks/_delete_form.twig') }}
                        </td>
                    </tr>
                {% endfor %}                
            </tbody>                        
        </table>
        <div class="mt-3">
            <a href="/tasks/task/new" class="btn btn-primary">Create New Task</a>
        </div>
        <!-- Pagination -->
        {% if totalPages > 1 %}
            <nav id="pagination" aria-label="Page navigation">
                <ul class="pagination">
                    {% if currentPage > 1 %}                        
                        <li class="page-item">
                            <a class="page-link" href="/tasks/task/index/{{ currentPage - 1 }}">Previous</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/tasks/task/index/{{ 1 }}"><<</a>
                        </li>
                    {% endif %}

                    {% for i in 1..totalPages %}
                        <li class="page-item {% if i == currentPage %}active{% endif %}">
                            <a class="page-link" href="/tasks/task/index/{{ i }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="/tasks/task/index/{{ totalPages }}">>></a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="/tasks/task/index/{{ currentPage + 1 }}">Next</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        {% endif %}        
    </section> 
{% endblock main %}